cabal-version:      3.0
name:               open-product
version:            0.2.0.0
synopsis:           Open product data types
description:        Open product data types by using type system to encode the extra information.
license:            BSD-3-Clause
license-file:       LICENSE
author:             Mrjt Jmn
maintainer:         meritamen@sdf.org
category:           Data
build-type:         Simple
tested-with:        GHC==9.8.2, GHC==9.6.4

common warnings
    ghc-options: -Wall

library
    import:           warnings
    exposed-modules:  Data.Product
    build-depends:    base >=4.17.2.0 && < 5
                    , first-class-families ^>= 0.8.1.0
                    , vector ^>=0.13.1.0
    hs-source-dirs:   src
    default-language: Haskell2010

test-suite Product-test
    import:           warnings
    default-language: Haskell2010
    other-modules:    ProductSpecs
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:    base >=4.17.2.0 && < 5
                    , open-product
                    , hspec
                    , tasty
                    , tasty-hspec
